<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% raw %}{% block title %}{% endraw %}{{ project_name }}{% raw %}{% endblock %}{% endraw %}</title>
    
    {% if ui == 'tailwind' %}
    {% raw %}{% load static %}{% endraw %}
    <link rel="stylesheet" href="{% raw %}{% static 'css/output.css' %}{% endraw %}">
    {% elif ui == 'bootstrap' %}
    {% raw %}{% load static %}{% endraw %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    {% endif %}
    
    {% raw %}{% load static %}{% endraw %}
    
    {% raw %}{% block extra_head %}{% endblock %}{% endraw %}
</head>
<body>
    {% if ui == 'tailwind' %}
    <div class="min-h-screen bg-gray-50">
        <nav class="bg-white shadow">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a href="/" class="text-xl font-bold text-gray-900">{{ project_name }}</a>
                    </div>
                    <div class="flex items-center space-x-4">
                        {% raw %}{% if user.is_authenticated %}
                            <span class="text-gray-700">Hello, {{ user.username }}</span>
                            <a href="/admin/" class="text-blue-600 hover:text-blue-800">Admin</a>
                        {% else %}
                            <a href="/admin/" class="text-blue-600 hover:text-blue-800">Admin</a>
                        {% endif %}{% endraw %}
                    </div>
                </div>
            </div>
        </nav>
        
        <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            {% raw %}{% block content %}{% endraw %}
            <div class="px-4 py-6 sm:px-0">
                <div class="border-4 border-dashed border-gray-200 rounded-lg h-96 flex items-center justify-center">
                    <div class="text-center">
                        <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to {{ project_name }}</h1>
                        <p class="text-lg text-gray-600">Your Django project is ready!</p>
                    </div>
                </div>
            </div>
            {% raw %}{% endblock %}{% endraw %}
        </main>
    </div>
    {% elif ui == 'bootstrap' %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">{{ project_name }}</a>
            <div class="navbar-nav ms-auto">
                {% raw %}{% if user.is_authenticated %}
                    <span class="navbar-text me-3">Hello, {{ user.username }}</span>
                    <a href="/admin/" class="nav-link">Admin</a>
                    <a href="{% url 'logout' %}" class="nav-link">Logout</a>
                {% else %}
                    <a href="{% url 'login' %}" class="nav-link">Login</a>
                {% endif %}{% endraw %}
            </div>
        </div>
    </nav>
    
    <div class="container mt-4">
        {% raw %}{% block content %}{% endraw %}
        <div class="jumbotron">
            <h1 class="display-4">Welcome to {{ project_name }}</h1>
            <p class="lead">Your Django project is ready!</p>
        </div>
        {% raw %}{% endblock %}{% endraw %}
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% else %}
    <header>
        <nav>
            <a href="/">{{ project_name }}</a>
            <div>
                {% raw %}{% if user.is_authenticated %}
                    <span>Hello, {{ user.username }}</span>
                    <a href="/admin/">Admin</a>
                    <a href="{% url 'logout' %}">Logout</a>
                {% else %}
                    <a href="{% url 'login' %}">Login</a>
                {% endif %}{% endraw %}
            </div>
        </nav>
    </header>
    
    <main>
        {% raw %}{% block content %}{% endraw %}
        <h1>Welcome to {{ project_name }}</h1>
        <p>Your Django project is ready!</p>
        {% raw %}{% endblock %}{% endraw %}
    </main>
    {% endif %}
    
    {% raw %}{% block extra_js %}{% endblock %}{% endraw %}
</body>
</html>