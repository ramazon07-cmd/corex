version: '3.8'

services:
  {% if database == 'postgres' %}
  db:
    image: postgres:15
    environment:
      POSTGRES_DB: {{ project_name }}
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password
    volumes:
      - postgres_data:/var/lib/postgresql/data/
    ports:
      - "5432:5432"
  {% elif database == 'mysql' %}
  db:
    image: mysql:8.0
    environment:
      MYSQL_DATABASE: {{ project_name }}
      MYSQL_ROOT_PASSWORD: password
    volumes:
      - mysql_data:/var/lib/mysql/
    ports:
      - "3306:3306"
  {% endif %}

  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"

  web:
    build: .
    command: python manage.py runserver 0.0.0.0:8000
    volumes:
      - .:/app
    ports:
      - "8000:8000"
    depends_on:
      {% if database in ['postgres', 'mysql'] %}
      - db
      {% endif %}
      - redis
    environment:
      - DEBUG=True
      {% if database == 'postgres' %}
      - DB_HOST=db
      {% elif database == 'mysql' %}
      - DB_HOST=db
      {% endif %}
      - REDIS_URL=redis://redis:6379/1

  celery:
    build: .
    command: celery -A {{ project_name }} worker -l info
    volumes:
      - .:/app
    depends_on:
      {% if database in ['postgres', 'mysql'] %}
      - db
      {% endif %}
      - redis
    environment:
      - DEBUG=True
      {% if database == 'postgres' %}
      - DB_HOST=db
      {% elif database == 'mysql' %}
      - DB_HOST=db
      {% endif %}
      - REDIS_URL=redis://redis:6379/1

volumes:
  {% if database == 'postgres' %}
  postgres_data:
  {% elif database == 'mysql' %}
  mysql_data:
  {% endif %}